<Window x:Class="GPXManager.views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPXManager.views"
        mc:Ignorable="d"
        Title="About GPX Manager" Height="450" Width="476.169" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Label Content="GPX Manager" HorizontalAlignment="Center" Margin="0,50,0 20" FontSize="28" FontWeight="Bold"/>
            <Label Content="Written by:" HorizontalAlignment="Center" FontSize="14" Margin="0 20 0 0"/>
            <Label Content="Rafael Martinez" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
            <Label Content="raffy.martinez@gmail.com" HorizontalAlignment="Center" FontSize="14" Margin="0" Height="30"/>

            <Label Content="App version:" x:Name="labelAppVerion" HorizontalAlignment="Center" Margin="0 50 0 0" FontSize="14"/>
            <Label Content="Mapping component:" HorizontalAlignment="Center" x:Name="labelMapOCXVersion"/>
            <Button Content="Close" x:Name="buttonClose" Click="OnButtonClick" Width="70" Height="30" Margin="0 30"/>
        </StackPanel>
    </Grid>
</Window>
