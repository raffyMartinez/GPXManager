        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Label Content="This is a label" x:Name="labelTitle" Margin="10 0 0 0"/>
