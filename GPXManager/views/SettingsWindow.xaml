<Window x:Class="GPXManager.views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPXManager.views"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="509.6">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1"  Grid.RowSpan="2">
            <Button Content="OK" x:Name="buttonOk" Click="OnButtonClick" Margin="20 30 10 10" Height="25"/>
            <Button Content="Cancel" x:Name="buttonCancel" Click="OnButtonClick" Margin="20 10 10 10" Height="25"/>
        </StackPanel>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel>
                <Label Content="GPX folder in computer" />
                <TextBox x:Name="textBoxGPXFolder" Height="25" Margin="5 5 5 15"/>
                <Button Content="Locate" Height="25" Width="100" Click="OnButtonClick" x:Name="buttonLocate"/>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <Label Content="GPX folder in device"/>
                <TextBox x:Name="textBoxGPXFolderDevice" Height="25" Margin="5 5 5 10"/>
            </StackPanel>
            <StackPanel Grid.Row="2">
                <Label Content="Path to backend database"/>
                <TextBox x:Name="textBoxBackendPath" Height="25" Margin="5 5 5 10"/>
                <Button Content="Locate" Height="25" Width="100" Click="OnButtonClick" x:Name="buttonLocateBackend"/>
            </StackPanel>
            <StackPanel Grid.Row="3">
                <Label Content="Hours offset from GMT"/>
                <TextBox x:Name="textBoxHoursOffsetGMT" Height="25" Margin="5 5 5 10" Width="50" HorizontalAlignment="Left"/>
            </StackPanel>            
        </Grid>
    </Grid>
</Window>
